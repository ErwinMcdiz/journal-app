<table class="table table-striped table-bordered table-hover">
  <br><br>
  <% if current_user %>
    <h2>Hi, current user: <%= current_user.email %></h2>
  <% end %>
  <br>
  <thead class="table-dark text-center">
    <tr>
      <th>Category</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td class="text-center"><%= link_to "Show", category, class: "btn btn-info btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to "New Category", new_category_path, class: "btn btn-primary" %>
<br><br>
