<tr>
  <td><%= link_to task.title, [@category, task] %></td>
  <td><%= task.due_date.strftime("%b %d, %Y") if task.due_date %></td>
  <td>
    <span class="badge <%= task.completed ? 'bg-success' : 'bg-warning text-dark' %>">
      <%= task.completed ? "Completed" : "Pending" %>
    </span>
  </td>
  <td>
    <% if task.user == current_user %>
      <div class="btn-group btn-group-sm">
        <%= link_to "Edit", edit_category_task_path(@category, task), 
                    class: "btn btn-outline-primary" %>
        <%= link_to "Delete", [@category, task], 
                    data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, 
                    class: "btn btn-outline-danger" %>
      </div>
    <% end %>
  </td>
</tr>